.container {
    box-sizing: border-box;
    padding: 16rpx;
}

.container .item {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    flex-wrap: wrap;
    margin: 24rpx 0;
    padding-bottom: 16rpx;
    border-bottom: 2rpx solid #eee;
}

.container image {
    width: 30%;
    border-radius: 8rpx;
}

.container .infos {
    width: 65%;
    letter-spacing: 4rpx;
}

.container .title {
    font-size: 32rpx;
    font-weight: bold;
    color: #808080;
}

.container .tel {
    font-size: 28rpx;
    color: darkred;
    font-weight: bold;
    line-height: 70rpx;
}

.container .address {
    font-size: 30rpx;
    font-weight: bold;
    color: #C51E19;
}
