/* px => rpx / 1px = 0.5rpx */

/* 轮播图 */

swiper {
    height: 300rpx;
}

swiper image {
    width: 100%;
    height: 100%;
}

/* 广播 */

.news {
    box-sizing: border-box;
    padding: 16rpx;
    display: flex;
    align-items: center;
    color: #444;
    font-size: 0.75rem;
}

.news image {
    width: 40rpx;
    height: 40rpx;
    margin-right: 16rpx;
}

/* 商品展示数据 */

.shopping {
    box-sizing: border-box;
    padding: 16rpx;
}

.title {
    display: flex;
    align-items: center;
    margin: 0 0 30rpx 0;
    font-size: .85rem;
}

.title::before {
    content: "";
    display: inline-block;
    width: 12rpx;
    height: 34rpx;
    background: darkred;
    margin-right: 16rpx;
}

.list {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
}

.list .item {
    width: 49%;
    margin-bottom: 40rpx;
}

.list image {
    width: 100%;
    height: 380rpx;
}

.list .item text {
    display: block;
}

.list .name {
    font-weight: bold;
    letter-spacing: 4rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    font-size: .85rem;
}

.list .des {
    color: gray;
    line-height: 60rpx;
    font-size: .75rem;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.list .price {
    color: orange;
    font-weight: bolder;
    font-size: .85rem;
}